<h1>Login Page</h1>

<form action="/login" class="input-form" name="login"method="post">
    <label class="message" for=""><%= message %></label><br>
    <label for="email">Email</label>
    <input name="email" type="text" required>
    <label for="password">Password</label>
    <input name="password" type="password" required>
    <button>Login</button>
    <button type="reset">Reset</button><br>
    <a href="/signup">Sign Up Here</a>
</form>

<script>
    var login_form = document.forms["login"]
    var validateLoginForm = function () {
    var email = login_form["email"].value;
    if(!emailIsValid(email)) {
        alert("Email is invalid. Try again!");
        return false
    }
}
login_form.addEventListener('submit',validateLoginForm);
</script>